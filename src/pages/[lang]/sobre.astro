---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/translations";

export async function getStaticPaths() {
  const langs = ["pt", "en"];
  return langs.map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
const image = (path) => path.startsWith("/") ? path : `/${path}`;
---

<Layout lang={lang} t={t}>

  <main class="max-w-6xl mx-auto px-4 py-8 text-[#656565] font-light">
    
    <!-- QUEM SOMOS -->
    <section class="md:flex md:items-center md:justify-between gap-8 mb-10">
      <div class="md:w-2/3">
        <h1 class="text-[2rem] font-bold text-[#ab090e] mb-4">{t("sobre.titulo")}</h1>
        <div class="mb-4 text-center md:hidden">
          <img src={image("images/equipe_nefits_2.svg")} alt="Equipe NéFiTs" class="mx-auto w-[18rem]" />
        </div>
        <p class="mb-4 text-[1rem]">{t("sobre.paragrafo1")}</p>
        <p class="text-[1rem]">{t("sobre.paragrafo2")}</p>
      </div>
      <div class="hidden md:block md:w-1/3 text-center">
        <img src={image("images/equipe_nefits_2.svg")} alt="Equipe NéFiTs" class="mx-auto w-[18rem]" />
      </div>
    </section>

    <!-- OBJETIVOS -->
    <section class="mb-10">
      <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-[2rem] font-bold text-[#ab090e] mb-4">{t("sobre.objetivos")}</h2>
    
        <div class="relative">
          <!-- Imagem flutuando à esquerda -->
          <img 
            src={image("images/sobre2.svg")} 
            alt="Objetivos" 
            class="float-left mr-6 mb-4 w-[22rem] object-contain" 
          />
    
          <!-- Parágrafos que envolvem a imagem -->
          <p class="text-[1rem] mb-4">{t("sobre.paragrafo3")}</p>
          <p class="text-[1rem]">{t("sobre.paragrafo4")}</p>
        </div>
    
        <!-- Limpeza do float -->
        <div class="clear-both"></div>
      </div>
  </main>
</Layout>
