---
import Layout from "../../layouts/Layout.astro";
import Intro from "../../components/Intro.astro";
import FooterSection from "../../components/FooterSection.astro";
import { useTranslations } from "../../i18n/translations";

export async function getStaticPaths() {
  const langs = ["pt", "en"];
  return langs.map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang);
const image = (path) => path.startsWith("/") ? path : `/${path}`;
---

<Layout lang={lang}>
  <Intro lang={lang} t={t} />

  <main class="max-w-6xl mx-auto px-4 py-8 text-[#656565] font-light">
    
    <!-- QUEM SOMOS -->
    <section class="md:flex md:items-start md:justify-between gap-8 mb-10">
      <div class="md:w-2/3">
        <h1 class="text-[2rem] font-bold text-[#ab090e] mb-4">{t("2.sobre")}</h1>
        <div class="mb-4 text-center md:hidden">
          <img src={image("images/equipe_nefits_2.svg")} alt="Equipe NéFiTs" class="mx-auto w-[18rem]" />
        </div>
        <p class="mb-4 text-[1rem]">{t("2.paragrafo1")}</p>
        <p class="text-[1rem]">{t("2.paragrafo2")}</p>
      </div>
      <div class="hidden md:block md:w-1/3 text-center">
        <img src={image("images/equipe_nefits_2.svg")} alt="Equipe NéFiTs" class="mx-auto w-[18rem]" />
      </div>
    </section>

    <!-- OBJETIVOS -->
    <section class="md:flex md:items-start md:justify-between gap-8">
      <div class="md:w-2/3">
        <h2 class="text-[2rem] font-bold text-[#ab090e] mb-4">{t("2.objetivos")}</h2>
        <div class="mb-4 text-center md:hidden">
          <img src={image("images/sobre2.svg")} alt="Objetivos" class="mx-auto w-[18rem]" />
        </div>
        <p class="mb-4 text-[1rem]">{t("2.texto1")}</p>
        <p class="text-[1rem]">{t("2.texto2")}</p>
      </div>
      <div class="hidden md:block md:w-1/3 text-center">
        <img src={image("images/sobre2.svg")} alt="Objetivos" class="mx-auto w-[18rem]" />
      </div>
    </section>
  </main>
  <FooterSection lang={lang} t={t} />
</Layout>
