---
import Layout from "../../layouts/Layout.astro";
import Intro from "../../components/Intro.astro";
import FooterSection from "../../components/FooterSection.astro";

import { useTranslations } from "../../i18n/translations";

// define quais idiomas o Astro deve gerar (ex: /pt, /en)
export async function getStaticPaths() {
  return [
    { params: { lang: "pt" } },
    { params: { lang: "en" } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout lang={lang}>
  <Intro lang={lang} t={t} />

  <main class="max-w-7xl mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">{t("7.home")}</h1>

    <section class="mt-6 bg-gray-100 rounded p-4">
      <h2 class="text-xl font-semibold mb-2">Página em construção</h2>
      <p class="text-gray-700">
        Você está visualizando a versão em: <strong>{lang}</strong>
      </p>
    </section>
  </main>
  <FooterSection lang={lang} t={t} />
</Layout>
