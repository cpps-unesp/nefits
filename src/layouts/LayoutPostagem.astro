---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="stylesheet" href="/css/styles.module.css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body style="height: 100vh;">
        <header>
            <div class="heroBanner py-4">
                <div class="row">
                  <div class="col-md-3 col-sm-12">
                    <a href="/"><img class="intro" src="/images/logo-banner.png" alt="Logo NéFiTs" /></a> 
                  </div>
                  <div class="col-md-7 text-end mt-2">
                    <ul class="ulLista">
                      <li class="liListaSelecionado">
                        <a href="/">Home</a>
                      </li>
                      <li class="liLista">
                        <a href="/sobre">Sobre</a>
                      </li>
                      <li class="liLista">
                        <a href="/equipe">Equipe</a>
                      </li>
                      <li class="liLista">
                        <a href="/noticias">Notícias</a>
                      </li>
                      <li class="liLista">
                        <a href="/publicacoes">Publicações</a>
                      </li>
                      <li class="liLista">
                        <a href="/videos">Vídeos</a>
                      </li>
                    </ul>
                  </div>
                  <div class="logoMenu col-md-2 col-sm-12">
                    <img src="/images/logo_unesp.svg" alt="Logo UNESP" />
                  </div>
                </div>
              </div>
        </header>
        <main class="mb-xl-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 gy-4">
                        <slot />
                    </div>
                    <div class="col-12 gy-4">
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </main>
	</body>
    <footer class="px-0 mx-0">
        <div class="rodape">
            <div class="row">
              <div class="col-6 col-lg-3 d-flex align-items-center justify-content-sm-center">
                <div class="row">
                  <div class="col-12 mb-1">
                    <h4 class="tituloRodape">Redes Sociais</h4>
                  </div>
                  <div class="col-3 gx-2 ps-3">
                    <a href="#" target="_blank"><img src="/images/facebook_rodape2.svg" alt="Rede Social 1" /></a>
                  </div>
      
                  <div class="col-3 gx-2">
                    <a href="#" target="_blank"><img src="/images/instagram_rodape2.svg" alt="Rede Social 2" /></a>
                  </div>
      
                  <div class="col-3 gx-2">
                    <a href="#" target="_blank"><img src="/images/linkedin_rodape2.svg" alt="Rede Social 3" /></a>
                  </div>
      
                  <div class="col-3 gx-2">
                    <a href="https://www.youtube.com/@nefits8028" target="_blank"><img src="/images/youtube_rodape.svg" alt="Rede Social 4" /></a>
                  </div>
                </div>
              </div>
      
              <div class="col-6 col-lg-3 d-flex align-items-center justify-content-sm-center">
                <div class="row">
                  <div class="col-12 mb-1 pt-3">
                    <h4 class="tituloRodape">Contato</h4>
                  </div>
                  <div class="col-12">
                    <p class="textoRodape">nefits.unesp@gmail.com</p>
                  </div>
                </div>
              </div>
      
              <div class="col-12 col-lg-6 d-flex justify-content-sm-center justify-content-lg-end">
                <div class="row">
                  <div class="col-4 pt-3">
                    <img src="/images/logos_rodape.svg" alt="Logos" />
                  </div>
                </div>
              </div>
      
              <hr class="hr mt-3 mb-3" />
      
              <p class="textoRodape">Design por <b class="textoRodape">Júlia dos Santos Silveira</b> © 2024 Current</p>
      
            </div>
          </div>
    </footer>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
