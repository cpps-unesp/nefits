---
import * as homeData from "../i18n/locales/home.json" assert { type: "json" };
import { useTranslations } from "../i18n/translations";

const { lang } = Astro.props;
const t = useTranslations(lang);

const info = homeData.publicacoes;
---

<div class="bg-light rounded shadow-md p-6 flex flex-col items-center text-center h-full">
  <h3 class="text-xl font-bold text-primary mb-2">{t("home.publicacoes.titulo")}</h3>
  <p class="text-neutral mb-4">{t("home.publicacoes.texto")}</p>
  <a href={`/${lang}${info.link}`} class="inline-block bg-primary text-white px-5 py-2 rounded hover:bg-[#90070b] text-sm font-semibold transition">
    {t("home.noticias.btn")}
  </a>
</div>
